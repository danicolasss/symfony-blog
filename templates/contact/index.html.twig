{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="justify-content-md-center">
        <div class="">
            <div class="h2 pb-2  border-bottom border-dark text-primary mb-3">
                From de contact
            </div>
            {{ form_start(formContact) }}
                {{ form_row(formContact.prenom) }}
                {{ form_row(formContact.nom) }}
                {{ form_row(formContact.email) }}
                {{ form_row(formContact.sujet) }}
                {{ form_row(formContact.contenu) }}
                <div class="d-flex justify-content-start">
                    <input type="submit" class="btn btn-dark" value="Envoyer">
                </div>
            {{ form_end(formContact) }}
        </div>
    </div>
{% endblock %}
