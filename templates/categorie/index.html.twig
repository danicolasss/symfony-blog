{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="justify-content-md-center">
        <div class="">
            <div class="h2 pb-2 text-primary border-bottom border-dark">
                Liste des catégories
            </div>
            <div class="list-group mb-5">
                {% for categorie in categories %}
                    <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            {{ categorie.categorie.titre }}
                            {% if categorie.nbrArticle > 1 %}
                                 ({{ categorie.nbrArticle }} articles)
                            {% else %}
                                ({{ categorie.nbrArticle }} article)
                            {% endif %}
                        </div>
                        <a href="{{ path('app_categories_slug', {'slug': categorie.categorie.slug }) }}" class="btn btn-outline-secondary">
                            <i class="fa-regular fa-circle-info"></i>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
